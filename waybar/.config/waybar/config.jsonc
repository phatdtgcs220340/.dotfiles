{
  "layer": "bot",
  "spacing": 0,
  "height": 0,
  "margin-bottom": 0,
  "margin-top": 15,
  "position": "top",
  "margin-right": 20,
  "margin-left": 20,
  "modules-left": [
    "sway/workspaces"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "pulseaudio",
    "network",
    "battery",
    "custom/keyboard",
    "custom/notification",
    "custom/suspend"
  ],
  "sway/workspaces": {
